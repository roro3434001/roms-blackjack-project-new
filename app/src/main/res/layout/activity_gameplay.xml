<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/blackjacktable"
    android:screenOrientation="landscape">

    <!-- Display current coins -->
    <TextView
        android:id="@+id/currentCoinsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coins: 100"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:padding="8dp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:background="#000000"
        android:layout_gravity="center"/>

    <!-- Betting Amount Input -->
    <EditText
        android:id="@+id/betAmountInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Bet Amount"
        android:inputType="number"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:layout_margin="16dp"
        android:padding="16dp"
        android:gravity="center"/>

    <!-- Place Bet Button -->
    <Button
        android:id="@+id/placeBetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Place Bet"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:backgroundTint="#FFC107" />

    <!-- Error message for invalid bet -->
    <TextView
        android:id="@+id/errorMessageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_red_light"
        android:text=""
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:padding="8dp"
        android:gravity="center"
        android:textSize="14sp"/>

    <!-- Display Dealer's Hand -->
    <TextView
        android:id="@+id/dealerHandTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dealer's Hand"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:background="#000000"
        android:layout_gravity="center"/>

    <!-- Dealer's Hand Container -->
    <LinearLayout
        android:id="@+id/dealerHandContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp">
    </LinearLayout>

    <!-- Display Player's Hand -->
    <TextView
        android:id="@+id/playerHandTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player's Hand"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:background="#000000"
        android:layout_gravity="center"/>

    <!-- Player's Hand Container -->
    <LinearLayout
        android:id="@+id/playerHandContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp">
    </LinearLayout>

    <!-- Countdown Timer TextView (placed just above the buttons) -->
    <TextView
        android:id="@+id/timerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time Left: 30s"
        android:textSize="18sp"
        android:textColor="@android:color/holo_red_light"
        android:layout_gravity="start"
        android:padding="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"/>

    <!-- Buttons at the bottom -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:padding="8dp">

        <Button
            android:id="@+id/btn_hit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hit"
            android:backgroundTint="#4CAF50" />

        <Button
            android:id="@+id/btn_stand"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Stand"
            android:backgroundTint="#FF9800" />

        <Button
            android:id="@+id/btn_split"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Split"
            android:backgroundTint="#2196F3" />

        <Button
            android:id="@+id/btn_double"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Double"
            android:backgroundTint="#E91E63" />
    </LinearLayout>

</LinearLayout>
